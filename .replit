modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["unixtools.ping"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[deployment]
run = ["sh", "-c", "npm run start"]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80


[workflows]
runButton = "Run Dev Server"

[[workflows.workflow]]
name = "Run Dev Server"
author = 37308151
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Test Feed System"
author = 37308151
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üß™ Starting Feed System Tests...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìã Running health check...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -s http://localhost:3000/api/feed/health-check | jq '.' || echo \"Health check API not available\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Feed testing setup complete!\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üåê Visit http://localhost:3000/feed/test for comprehensive testing\""

[agent]
expertMode = true
